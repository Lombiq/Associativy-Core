@model Associativy.Models.SearchFormPart

@{
    Script.Require("AssociativyAutoComplete").AtHead();
    Style.Require("jQueryUI_Orchard");
}

<fieldset>
    @Html.LabelFor(model => model.Terms, T("Search terms"))
    @Html.TextBoxFor(model => model.Terms, new { @class = "text text-small" })
    @Html.ValidationMessageFor(model => model.Terms)
</fieldset>


<script type="text/javascript">
    $.associativyAutoComplete.terms("Terms", "@Url.Action("FetchSimilarTerms", routeData["controller"].ToString())");
</script>